    <script>
        $(document).ready(function () {
            $('#province').change(function () {
                var provinceId = parseInt($(this).val());
                if (!isNaN(provinceId)) {
                    var district = $('#disct');
                    district.empty();
                    district.append($("<option></option>").val('').html('Please wait ...'));

                    $.ajax({
                        url: 'localhost:44363/backapi/getDistricById',
                        type: 'GET',
                        dataType: 'json',
                        data: { provinceId: provinceId },
                        success: function (d) {

                            district.empty();
                            $.each(d, function (i, states) {
                                district.append($("<option></option>").val(states.Id).html(states.Name));
                            });
                        },
                        error: function () {
                            alert('Error!');
                        }
                    });
                }
            })
        })
    </script>
