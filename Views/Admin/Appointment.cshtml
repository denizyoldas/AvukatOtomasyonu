@model List<AvukatOtomasyonu.Models.AppointmentDTO>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Dava listesi</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Anasafya</a></li>
                    <li class="active">Randevular</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="white-box">
                    <h3 class="box-title" style="display: flex; justify-content: flex-end">
                        <a class="btn btn-success" href="@Url.Action("AddAppointment", "Admin")">Yeni</a>
                    </h3>
                    <div class="row card-body">
                        <div class="col-12">
                            @if (Model.Count != 0)
                            {
                                <div class="table-responsive">
                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Kişi</th>
                                                <th>Kategori</th>
                                                <th>Başlama Tarihi</th>
                                                <th>Bitiş Tarihi</th>
                                                <th>İşlem</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>@item.Id</td>
                                                    <td>@item.UserName</td>
                                                    <td>@item.CategoryName</td>
                                                    <td>@item.StartDate</td>
                                                    <td>@item.EndDate</td>
                                                    <td>
                                                        <a href="@Url.Action("DeleteAppointment", "Admin", new { id = item.Id })"><i class="mdi mdi-delete text-danger"></i></a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <h4>Randevunuz Bulunmuyor</h4>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>