@model IEnumerable<AvukatOtomasyonu.Models.Case>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Kategori Ekle</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Anasafya</a></li>
                    <li class="active">Kategoriler</li>
                    <li class="active">Yeni</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="col-sm-12">
                    <div class="white-box">
                        <p class="text-muted m-b-30 font-13"> Kişisel Bilgiler </p>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-md-12">Davalı kişi</label>
                                <div class="col-md-12">
                                    <select class="form-control" name="customerId">
                                        @foreach (var item in Model)
                                        {
                                            <option value="@item.Id">@item.UserName @item.UserSurname</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Başlangıç Tarihi</label>
                                <div class="col-md-12">
                                    <input type="date" name="StartDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-12">Bitiş Tarihi</label>
                                <div class="col-md-12">
                                    <input type="date" name="EndDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12" style="display: flex; justify-content: flex-end">
                                    <button class="btn btn-success" type="submit">Kaydet</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


