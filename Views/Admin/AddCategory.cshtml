@model AvukatOtomasyonu.Models.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <div class="row bg-title">
            <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                <h4 class="page-title">Kategori Ekle</h4>
            </div>
            <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                <ol class="breadcrumb">
                    <li><a href="#">Anasafya</a></li>
                    <li class="active">Kategoriler</li>
                    <li class="active">Yeni</li>
                </ol>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="white-box">
                    <p class="text-muted m-b-30 font-13"> Eklenen kategoriler landing page'de gözükür. </p>
                    @using (Html.BeginForm())
                    {
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-12">Başlık</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(a => a.Name, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Açıklama</label>
                        <div class="col-md-12">
                            @Html.TextBoxFor(a => a.Description, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12" style="display: flex; justify-content: flex-end">
                            <button class="btn btn-success" type="submit">Kaydet</button>
                        </div>
                    </div>
                </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


